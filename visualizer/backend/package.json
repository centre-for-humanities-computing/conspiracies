{
  "name": "visualizer-backend",
  "main": "src/index.ts",
  "scripts": {
    "start": "nodemon src/index.ts",
    "build": "ncc build src/server.ts -o dist/",
    "build:win32": "PLATFORM=win32 npm run build",
    "build:macos": "PLATFORM=darwin npm run build",
    "build:linux": "PLATFORM=linux npm run build",
    "postbuild": "[ -n \"$PLATFORM\" ] && { rm -fr tmp/node_modules && npm install sqlite3 --prefix tmp --platform=$PLATFORM && cp -r tmp/node_modules/sqlite3/build/Release/node_sqlite3.node dist/build/Release/ && rm -fr tmp; } || { exit 0; }"
  },
  "description": "",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "typeorm": "^0.3.20",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.2",
    "concurrently": "^9.1.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "@vercel/ncc": "^0.38.3"
  }
}
